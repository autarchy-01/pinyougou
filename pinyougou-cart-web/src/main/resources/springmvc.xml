<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <import resource="classpath:spring-security.xml"/>
    <!--开启spring注解扫描-->
    <context:component-scan base-package="com.pinyougou.cart"/>
    <!--spring的注解驱动 默认是使用jackson的依赖，此处采用fastjson-->
    <mvc:annotation-driven>
        <mvc:message-converters>
            <!--字符串转换器处理 使用StringHttpMessageConverter 来进行-->
            <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <constructor-arg name="defaultCharset" value="utf-8"/>
            </bean>
            <!--json转换器 使用FastJsonHttpMessageConverter 并支持json转成字符串-->
            <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="defaultCharset" value="utf-8"/>
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=utf-8</value>
                        <value>application/json;charset=utf-8</value>
                    </list>
                </property>
                <property name="fastJsonConfig">
                    <bean class="com.alibaba.fastjson.support.config.FastJsonConfig">
                        <property name="serializerFeatures">
                            <list>
                                <value>WriteMapNullValue</value>
                                <value>WriteDateUseDateFormat</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    <!--开启dubbo注解扫描-->
    <dubbo:annotation package="com.pinyougou.cart.controller"/>
    <!--配置应用-->
    <dubbo:application name="pinyougou-cart-web"/>
    <!--zookeeper注册中心-->
    <dubbo:registry protocol="zookeeper" address="192.168.111.135" port="2181"/>
    <!--设置超时时间默认1s-->
    <dubbo:consumer timeout="100000"/>
</beans>